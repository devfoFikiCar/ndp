<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/classes_teacher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.classes.teacher.ClassesTeacherFragment"
    android:background="@color/colorPrimary"
    >

    <Button
        android:id="@+id/createClass"
        android:text="@string/napravi_odeljenje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColor="@color/userInput"
        android:background="@drawable/custom_button_login"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvClassesTeacher" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvClassesTeacher"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/createClass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>