<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/etFullNameR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="@string/puno_ime"
        android:inputType="textPersonName"
        android:padding="3dp"
        android:textColor="@color/userInput"
        android:textColorHint="@color/userInput"
        app:layout_constraintBottom_toTopOf="@+id/etUsernameR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etUsernameR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="@string/username"
        android:inputType="textPersonName"
        android:padding="3dp"
        android:textColor="@color/userInput"
        android:textColorHint="@color/userInput"
        app:layout_constraintBottom_toTopOf="@+id/etPasswordR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etFullNameR" />

    <EditText
        android:id="@+id/etPasswordR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="3dp"
        android:textColor="@color/userInput"
        android:textColorHint="@color/userInput"
        app:layout_constraintBottom_toTopOf="@+id/etConfirmPasswordR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUsernameR" />

    <EditText
        android:id="@+id/etConfirmPasswordR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="@string/potvrdi_pasword"
        android:inputType="textPassword"
        android:padding="3dp"
        android:textColor="@color/userInput"
        android:textColorHint="@color/userInput"
        app:layout_constraintBottom_toTopOf="@+id/cbCodeR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPasswordR" />

    <EditText
        android:id="@+id/etSchoolCodeR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:hint="@string/kolski_kod"
        android:inputType="textPassword"
        android:maxLength="4"
        android:padding="3dp"
        android:textColor="@color/userInput"
        android:textColorHint="@color/userInput"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbCodeR" />

    <CheckBox
        android:id="@+id/cbCodeR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:buttonTint="@color/colorAccent"
        android:text="@string/imam_kolski_kod"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@+id/etSchoolCodeR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etConfirmPasswordR" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registruj profesorski akaunt na\nnaucidaprogramiras@outlook.com"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etSchoolCodeR" />
</androidx.constraintlayout.widget.ConstraintLayout>