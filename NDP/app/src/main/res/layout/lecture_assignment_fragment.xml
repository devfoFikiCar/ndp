<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lecture_assignment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lectureassignment.LectureAssignmentFragment">

    <Button
        android:id="@+id/btLecturesList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lectures"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btAssignmentsList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btAssignmentsList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/assignments"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btStats"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btLecturesList" />

    <Button
        android:id="@+id/btStats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/statisticsBT"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btAssignmentsList" />
</androidx.constraintlayout.widget.ConstraintLayout>