<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/student_view_lecture"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.viewLecture.StudentViewLectureFragment">

    <TextView
        android:id="@+id/tvLectureTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/markdown_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="25sp"/>

    <br.tiagohm.markdownview.MarkdownView
        android:id="@+id/markdown_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:escapeHtml="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLectureTitleView"
        app:layout_constraintHorizontal_weight="2"/>

</androidx.constraintlayout.widget.ConstraintLayout>